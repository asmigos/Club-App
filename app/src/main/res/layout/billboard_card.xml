<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/thumbnail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/google"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/music_name"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:text="Music Name"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="@color/textColorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/music_description"
                android:layout_below="@+id/music_name"
                android:text="Abc"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="@color/textColorPrimary"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/music_timer"
                android:layout_gravity="center"
                android:text="9:04"
                android:layout_alignBaseline="@+id/playPauseButton"
                android:layout_alignBottom="@+id/playPauseButton"
                android:layout_toLeftOf="@+id/playPauseButton"
                android:layout_toStartOf="@+id/playPauseButton"
                android:textColor="@color/textColorPrimary"/>

            <View
                android:layout_gravity="bottom"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@color/textColorPrimary"
                android:layout_toRightOf="@+id/music_timer"
                android:layout_marginLeft="5dp" />
            <Button
                android:id="@+id/playPauseButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5px"
                android:layout_marginTop="5px"
                android:textOn=" android:textOff="
                android:background="@drawable/ic_play_arrow_black_24dp"
                android:layout_alignParentRight="true">
            </Button>

        </RelativeLayout>

        <view
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:shadowColor="@color/textColorPrimary"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>
